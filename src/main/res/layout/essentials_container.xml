<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/essentialsimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300mdp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/expar"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_bg"
        android:backgroundTint="#AB0E0D0D"
        android:padding="@dimen/_12mdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tag"
        app:layout_constraintBottom_toBottomOf="@+id/essentialsimage"
        app:layout_constraintStart_toStartOf="@+id/essentialsimage" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="@dimen/_22mdp"
        android:layout_height="@dimen/_22mdp"
        android:layout_marginStart="-19dp"
        android:layout_marginBottom="-19dp"
        android:background="@drawable/circle_bg"
        android:backgroundTint="#FA8125"
        android:gravity="center"
        android:text="4"
        android:textColor="#F3F0F0"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/expar"
        app:layout_constraintStart_toEndOf="@+id/expar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rosarivo"
        android:text="Collection Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/essentialsimage"
        app:layout_constraintStart_toStartOf="@id/essentialsimage"
        app:layout_constraintTop_toTopOf="@+id/textView10" />



</androidx.constraintlayout.widget.ConstraintLayout>